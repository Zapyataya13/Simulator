<Window x:Class="Simulator.GameWindows.WinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator.GameWindows"
        mc:Ignorable="d"
        Title="Победа!!!!!" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="81*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.RowSpan="4" Margin="0,0,0,0.75" Grid.ColumnSpan="2"/>
        <TextBlock Text="Вы выиграли!" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="234.677,39,298,39" Grid.Row="0" Grid.Column="1"  />
        <Button x:Name="btnRestartGame" Content="Начать заново" Height="50" Margin="200,40,250,10" Grid.Row="2" Click="BtnRestartGame_Click" Grid.Column="1"/>
        <Button x:Name="btnEndGame" Content="Выйти в главное меню" Height="50" Margin="200.670,20,250,20" Grid.Row="3" Click="BtnEndGame_Click" Grid.Column="1" />

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
    </Grid>
</Window>
